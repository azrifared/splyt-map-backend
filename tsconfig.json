{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2016"],
    "allowJs": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "paths": {},
    "noUncheckedIndexedAccess": true,
